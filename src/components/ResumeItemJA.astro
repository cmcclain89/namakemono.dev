---
const { item } = Astro.props;
---

<div class="flex flex-col">
  <div class="border-b-2 border-purple-700 pb-1">
    <h3 class="text-3xl">
      {item.company}
      {item.emoji}
    </h3>
    <p class="text-md text-slate-700">{item.position}</p>
    <a
      class="text-md text-purple-700 hover:text-purple-500 hover:underline decoration-2 underline-offset-2"
      href={item.site}
      target="_blank">{item.site.split("/")[2]}</a
    >
    <div class="pt-4 flex flex-row">
      <p class="text-sm flex-auto">{item.country} {item.state}{item.city}</p>

      <p class="text-sm text-slate-500 italic flex-initial">{item.period}</p>
    </div>
  </div>
  <div>
    <ul class="list-disc list-inside pt-4">
      {item.details.map((detail) => <li class="pb-4">{detail}</li>)}
    </ul>
  </div>
</div>
