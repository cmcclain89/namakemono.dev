---
const { item } = Astro.props;
---

<div class="flex flex-col">
  <div class="border-b-2 border-orange-700 pb-1">
    <h3 class="text-3xl">
      {item.company}
      {item.emoji}
    </h3>
    <p class="text-md text-slate-600">{item.position}</p>
    <a
      class="text-md text-orange-700 hover:text-orange-500 hover:underline decoration-2 underline-offset-2"
      href={item.site}
      target="_blank">{item.site.split("/")[2]}</a
    >
    <div class="pt-4 flex flex-row">
      <p class="text-sm flex-auto">{item.country} {item.city}, {item.state}</p>

      <p class="text-sm text-slate-400 italic flex-initial">{item.period}</p>
    </div>
  </div>
  <div>
    <ul class="list-disc list-inside pt-4">
      {item.details.map((detail) => <li class="pb-4">{detail}</li>)}
    </ul>
  </div>
</div>
