---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} pageHeader={frontmatter.title}>
  <p class="text-gray-500 italic text-xs pb-8">
    Written on {frontmatter.pubDate.slice(0, 10)} by {frontmatter.author}
  </p>
  <p class="border-b-2 border-purple-700 pb-4 mb-12">
    {frontmatter.description}
  </p>

  <slot />
</BaseLayout>
